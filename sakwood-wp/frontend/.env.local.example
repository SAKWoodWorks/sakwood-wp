# ============================================================================
# Sakwood Frontend Environment Variables
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control
# ============================================================================

# ----------------------------------------------------------------------------
# WordPress API Configuration
# ----------------------------------------------------------------------------
# GraphQL API endpoint for fetching content (products, pages, etc.)
NEXT_PUBLIC_WORDPRESS_GRAPHQL_URL=http://localhost:8006/graphql

# WordPress REST API base URL for custom endpoints
# Used for orders, customer data, and custom operations
NEXT_PUBLIC_WORDPRESS_API_URL=http://localhost:8006/wp-json/sakwood/v1

# Alternative REST API URL (for compatibility)
NEXT_PUBLIC_WORDPRESS_REST_URL=http://localhost:8006/wp-json/sakwood/v1

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------
# Application name (used in metadata, branding)
NEXT_PUBLIC_APP_NAME=SAK WoodWorks

# Application description (used in SEO metadata)
NEXT_PUBLIC_APP_DESCRIPTION=Premium Construction Materials

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
# Enable/disable shopping cart functionality
# Set to 'true' for production, 'false' for maintenance
NEXT_PUBLIC_ENABLE_CART=true

# Enable/disable user registration
# Set to 'true' to allow new customer accounts
NEXT_PUBLIC_ENABLE_REGISTRATION=true

# Enable/disable wholesale application
# Set to 'true' to show B2B wholesale application form
NEXT_PUBLIC_ENABLE_WHOLESALE=true

# ----------------------------------------------------------------------------
# Analytics & Monitoring (Optional)
# ----------------------------------------------------------------------------
# Google Analytics 4 Measurement ID
# Format: G-XXXXXXXXXX
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Tag Manager Container ID
# Format: GTM-XXXXXXX
# NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Sentry DSN for error tracking (production)
# NEXT_PUBLIC_SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# ----------------------------------------------------------------------------
# Social Media Links
# ----------------------------------------------------------------------------
# LINE OA URL for customer contact
NEXT_PUBLIC_LINE_URL=https://lin.ee/v86CTkq

# Facebook page URL
# NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/sakwood

# Instagram page URL
# NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/sakwood

# ----------------------------------------------------------------------------
# Site Configuration
# ----------------------------------------------------------------------------
# Default locale (language code)
# Supported: 'th' (Thai), 'en' (English)
NEXT_PUBLIC_DEFAULT_LOCALE=th

# Site URL (for canonical URLs and sitemap)
# Update this for production deployment
NEXT_PUBLIC_SITE_URL=https://sakwood.com

# ----------------------------------------------------------------------------
# Payment Configuration (PromptPay)
# ----------------------------------------------------------------------------
# PromptPay merchant ID (phone number or tax ID)
# Format: 13-digit number without dashes
NEXT_PUBLIC_PROMPTPAY_MERCHANT_ID=0225559000467

# PromptPay merchant name (displayed on QR code)
NEXT_PUBLIC_PROMPTPAY_MERCHANT_NAME=SAK WoodWorks

# ----------------------------------------------------------------------------
# CDN & Image Configuration (Optional)
# ----------------------------------------------------------------------------
# CDN URL for serving optimized images
# Leave empty to use WordPress backend directly
# NEXT_PUBLIC_CDN_URL=https://cdn.sakwood.com

# Image optimization quality (1-100)
# NEXT_PUBLIC_IMAGE_QUALITY=80

# ----------------------------------------------------------------------------
# Development Settings (DO NOT use in production)
# ----------------------------------------------------------------------------
# Enable debug mode (shows additional logging)
# NEXT_PUBLIC_DEBUG=false

# Disable SSL verification (for local development only)
# NODE_TLS_REJECT_UNAUTHORIZED=0

# ----------------------------------------------------------------------------
# Rate Limiting (Optional - for API route protection)
# ----------------------------------------------------------------------------
# Redis Upstash URL for rate limiting
# UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io

# Redis Upstash token
# UPSTASH_REDIS_REST_TOKEN=your-redis-token

# ============================================================================
# NOTES:
# ============================================================================
# 1. All NEXT_PUBLIC_* variables are exposed to the browser
# 2. Secret values (API keys, tokens) should NOT use NEXT_PUBLIC_ prefix
# 3. Variables are loaded at build time - restart dev server after changes
# 4. Test values are provided for local development
# 5. Update SITE_URL before deploying to production
# ============================================================================
